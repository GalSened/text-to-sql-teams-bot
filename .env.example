# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# SQL Server Configuration
DB_DRIVER=ODBC Driver 18 for SQL Server
DB_SERVER=your_server_name_or_ip
DB_PORT=1433
DB_NAME=your_database_name
DB_USER=your_username
DB_PASSWORD=your_password
DB_TRUSTED_CONNECTION=no

# Alternative: Connection String (if you prefer direct connection string)
# DB_CONNECTION_STRING=mssql+pyodbc://username:password@server:1433/database?driver=ODBC+Driver+18+for+SQL+Server

# Application Configuration
APP_NAME=Text-to-SQL Application
APP_VERSION=1.0.0
APP_HOST=0.0.0.0
APP_PORT=8000
DEBUG=true

# Security
SECRET_KEY=your_secret_key_here_generate_with_openssl_rand_hex_32
REQUIRE_CONFIRMATION_FOR_WRITES=true
ENABLE_ADMIN_OPERATIONS=false

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Query Limits
MAX_ROWS_RETURN=1000
QUERY_TIMEOUT_SECONDS=30
